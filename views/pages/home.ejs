<div class="max-w-7xl mx-auto px-4 sm:px-6 pt-10 pb-6">
  <section class="pan-hero" data-aos="fade-up">
    <% if (featured) { %>
      <div class="pan-heroBg">
        <img
          src="<%= featured.cover || '/public/img/og.png' %>"
          alt=""
          onerror="this.onerror=null;this.src='/public/img/og.png';"
        />
      </div>

      <div class="pan-heroCard">
        <div class="tracking-[0.45em] uppercase text-xs opacity-70">Featured</div>
        <h1 class="pan-heroTitle mt-4"><%= featured.bookName %></h1>
        <p class="pan-heroDesc mt-5"><%= (featured.introduction || '').slice(0, 210) %>...</p>

        <div class="pan-heroActions mt-7">
          <a class="pan-btn pan-btnPrimary" href="/detail/<%= featured.bookId %>">
            <i class="ri-information-line"></i> Open Detail
          </a>
          <a class="pan-btn" href="/browse">
            <i class="ri-compass-3-line"></i> Explore
          </a>
        </div>

        <% if (featured.tags && featured.tags.length) { %>
          <div class="pan-chipRow mt-7">
            <% featured.tags.slice(0, 8).forEach(t => { %>
              <span class="pan-chip"><%= t %></span>
            <% }) %>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="pan-heroCard">
        <div class="tracking-[0.45em] uppercase text-xs opacity-70">PanStream</div>
        <h1 class="pan-heroTitle mt-4">Luxury streaming interface</h1>
        <p class="pan-heroDesc mt-5">API sedang tidak tersedia. Refresh halaman.</p>
        <div class="pan-heroActions mt-7">
          <a class="pan-btn pan-btnPrimary" href="/browse">Browse</a>
          <a class="pan-btn" href="/search">Search</a>
        </div>
      </div>
    <% } %>
  </section>

  <%- include("../components/rail", { title: "Trending", items: trending, cta: { href: "/browse?classify=terbaru&page=1", label: "More" } }) %>
  <%- include("../components/rail", { title: "Latest", items: latest, cta: { href: "/browse?classify=terbaru&page=1", label: "More" } }) %>
  <%- include("../components/rail", { title: "For You", items: foryou }) %>
  <%- include("../components/rail", { title: "Random", items: random }) %>
</div>
