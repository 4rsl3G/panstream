<div class="max-w-7xl mx-auto px-4 sm:px-6 pt-10 pb-16">
  <div class="flex flex-wrap items-end justify-between gap-4">
    <div>
      <div class="tracking-[0.45em] uppercase text-xs opacity-60" data-aos="fade-right">Browse</div>
      <h1 class="mt-3 text-2xl md:text-4xl font-semibold" data-aos="fade-up">Explore drama</h1>
    </div>

    <div class="pan-filter" data-aos="fade-left">
      <button class="pan-filterBtn is-active" data-classify="terbaru">Terbaru</button>
      <button class="pan-filterBtn" data-classify="populer">Populer</button>
    </div>
  </div>

  <div id="panBrowseGrid" class="mt-10 pan-grid">
    <% (items || []).forEach((d, i) => { %>
      <a href="/detail/<%= d.bookId %>" class="pan-gridCard" data-aos="zoom-in" data-aos-delay="<%= Math.min(240, i*10) %>">
        <div class="pan-gridPoster">
          <img loading="lazy" src="/img?u=<%= encodeURIComponent(d.cover || '') %>" alt="<%= d.bookName %>"/>
          <div class="pan-gridShade"></div>
        </div>
        <div class="pan-gridMeta">
          <div class="pan-gridTitle"><%= d.bookName %></div>
          <div class="pan-gridSub"><%= d.playCount || "" %></div>
        </div>
      </a>
    <% }) %>
  </div>

  <div id="panBrowseLoadMore" class="pan-loadMore">
    <div class="pan-loadDot"></div><div class="pan-loadDot"></div><div class="pan-loadDot"></div>
    <div class="pan-loadText">Loading moreâ€¦</div>
  </div>

  <script>
    window.__PAN_BROWSE__ = { classify: "<%= classify %>", page: <%= page %> };
  </script>
</div>
