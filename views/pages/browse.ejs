<div class="max-w-7xl mx-auto px-6 py-10">
  <div class="flex items-end justify-between">
    <div>
      <div class="tracking-[0.45em] uppercase text-xs opacity-60">Browse</div>
      <h1 class="mt-2 text-3xl md:text-4xl font-semibold"><%= classify %></h1>
      <div class="mt-2 opacity-60 text-sm">Infinite scroll aktif. Scroll terus untuk load halaman berikutnya.</div>
    </div>
    <div class="flex gap-2">
      <a class="pan-btn" href="/browse?classify=terbaru">terbaru</a>
      <a class="pan-btn" href="/browse?classify=populer">populer</a>
      <a class="pan-btn" href="/browse?classify=romantis">romantis</a>
    </div>
  </div>

  <div id="grid" class="mt-10 grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
    <% page1.forEach((d) => { %>
      <a class="group block" href="/detail/<%= d.bookId %>">
        <div class="aspect-[2/3] rounded-2xl overflow-hidden border border-white/10">
          <img loading="lazy" src="<%= d.bookCover %>" class="w-full h-full object-cover group-hover:scale-[1.04] transition duration-500"/>
        </div>
        <div class="mt-3 text-sm opacity-90 line-clamp-2"><%= d.bookName || "" %></div>
        <div class="text-xs opacity-60 mt-1"><%= d.playCount || "" %></div>
      </a>
    <% }) %>
  </div>

  <div class="mt-10 flex justify-center">
    <div id="sentinel" class="w-full max-w-xl h-16 border border-white/10 rounded-2xl flex items-center justify-center opacity-70">
      Loading moreâ€¦
    </div>
  </div>
</div>

<script>
  window.__PAN_BROWSE__ = { classify: "<%= classify %>" };
</script>
<script src="/js/browse.js"></script>
