<div class="max-w-7xl mx-auto px-6 py-10">
  <section class="grid md:grid-cols-[320px,1fr] gap-10">
    <div data-aos="flip-left">
      <div class="rounded-3xl overflow-hidden border border-white/10">
        <img src="<%= detail.bookCover %>" alt="<%= detail.bookName %>" class="w-full object-cover" loading="lazy"/>
      </div>

      <div class="mt-4 flex gap-2 flex-wrap">
        <% (detail.tags || []).slice(0,10).forEach(t => { %>
          <span class="pan-chip"><%= t %></span>
        <% }) %>
      </div>
    </div>

    <div>
      <div class="tracking-[0.45em] uppercase text-xs opacity-60" data-aos="fade-down">Detail</div>
      <h1 class="mt-3 text-3xl md:text-5xl font-semibold leading-tight" data-aos="fade-up"><%= detail.bookName %></h1>
      <div class="mt-3 opacity-60" data-aos="fade-up" data-aos-delay="80"><%= detail.playCount || "" %> views</div>

      <p class="mt-6 max-w-3xl opacity-75 leading-relaxed" data-aos="fade-up" data-aos-delay="140">
        <%= detail.introduction || "" %>
      </p>

      <div class="mt-8 border-t border-white/10 pt-8">
        <div class="flex items-center justify-between">
          <h2 class="tracking-[0.35em] uppercase text-xs opacity-70" data-aos="fade-right">Episodes</h2>
          <div class="text-xs opacity-60" data-aos="fade-left"><%= episodes.length %> total</div>
        </div>

        <div class="mt-5 grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3">
          <% episodes.slice(0, 36).forEach((ep, i) => { %>
            <a href="/watch/<%= detail.bookId %>/<%= ep.chapterId %>"
               class="pan-epBtn"
               data-aos="zoom-in"
               data-aos-delay="<%= Math.min(240, i*16) %>">
              <div class="text-xs opacity-70">EP</div>
              <div class="text-sm mt-1 font-medium line-clamp-1"><%= ep.chapterName || ("Episode " + (i+1)) %></div>
              <div class="text-xs opacity-55 mt-2 flex items-center gap-2">
                <i class="ri-play-circle-line"></i> Watch
              </div>
            </a>
          <% }) %>
        </div>

        <% if (episodes.length > 36) { %>
          <div class="mt-6 opacity-70 text-sm">
            Episode lainnya tersedia â€” klik episode untuk masuk ke player.
          </div>
        <% } %>
      </div>
    </div>
  </section>
</div>
