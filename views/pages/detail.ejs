<div class="max-w-7xl mx-auto px-4 sm:px-6 py-10">
  <section class="grid lg:grid-cols-[360px,1fr] gap-10">
    <div data-aos="flip-left">
      <div class="rounded-3xl overflow-hidden border border-white/10 pan-glass">
        <img src="/img?u=<%= encodeURIComponent(detail.bookCover || '') %>"
             alt="<%= detail.bookName %>"
             class="w-full object-cover" loading="lazy"/>
      </div>

      <div class="mt-5 flex gap-2 flex-wrap">
        <% (detail.tags || []).slice(0,14).forEach(t => { %>
          <span class="pan-chip"><%= t %></span>
        <% }) %>
      </div>

      <% if ((detail.performers || []).length) { %>
        <div class="mt-8 border-t border-white/10 pt-6">
          <div class="tracking-[0.35em] uppercase text-xs opacity-70">Performers</div>
          <div class="mt-4 grid grid-cols-2 gap-3">
            <% detail.performers.slice(0,4).forEach(p => { %>
              <div class="pan-miniCard">
                <img src="/img?u=<%= encodeURIComponent(p.performerAvatar || '') %>" class="pan-miniAvatar" />
                <div class="min-w-0">
                  <div class="text-sm opacity-90 truncate"><%= p.performerName %></div>
                  <div class="text-xs opacity-60"><%= p.videoCount %> videos</div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>

    <div>
      <div class="tracking-[0.45em] uppercase text-xs opacity-60" data-aos="fade-down">Detail</div>
      <h1 class="mt-3 text-3xl md:text-5xl font-semibold leading-tight" data-aos="fade-up"><%= detail.bookName %></h1>

      <div class="mt-4 flex flex-wrap items-center gap-3" data-aos="fade-up" data-aos-delay="80">
        <span class="pan-pill"><i class="ri-eye-line"></i> <%= (detail.viewCount || 0).toLocaleString("id-ID") %></span>
        <span class="pan-pill"><i class="ri-user-follow-line"></i> <%= (detail.followCount || 0).toLocaleString("id-ID") %></span>
        <span class="pan-pill"><i class="ri-play-circle-line"></i> <%= detail.totalChapterNum || episodes.length || "â€”" %> eps</span>
      </div>

      <p class="mt-6 max-w-3xl opacity-75 leading-relaxed" data-aos="fade-up" data-aos-delay="140">
        <%= detail.introduction || "Deskripsi tidak tersedia." %>
      </p>

      <div class="mt-10 border-t border-white/10 pt-8">
        <div class="flex items-center justify-between">
          <h2 class="tracking-[0.35em] uppercase text-xs opacity-70" data-aos="fade-right">Episodes</h2>
          <div class="text-xs opacity-60" data-aos="fade-left"><%= episodes.length %> total</div>
        </div>

        <div class="mt-5 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% episodes.forEach((ep, i) => { %>
            <% if (ep.unlock) { %>
              <a href="/watch/<%= detail.bookId %>/<%= ep.chapterId %>"
                 class="pan-epBtn"
                 data-aos="zoom-in"
                 data-aos-delay="<%= Math.min(240, i*8) %>">
                <div class="text-xs opacity-70">EP</div>
                <div class="text-sm mt-1 font-semibold">EP <%= (ep.chapterIndex + 1) %></div>
                <div class="text-xs opacity-55 mt-2 flex items-center gap-2">
                  <i class="ri-play-circle-line"></i> Watch
                </div>
              </a>
            <% } else { %>
              <div class="pan-epBtn pan-epLocked" data-aos="zoom-in" data-aos-delay="<%= Math.min(240, i*8) %>">
                <div class="text-xs opacity-50">EP</div>
                <div class="text-sm mt-1 font-semibold opacity-60">EP <%= (ep.chapterIndex + 1) %></div>
                <div class="text-xs opacity-45 mt-2 flex items-center gap-2">
                  <i class="ri-lock-2-line"></i> Locked
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
</div>
