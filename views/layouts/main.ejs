<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title><%= meta?.title || "PanStream" %></title>
  <meta name="description" content="<%= meta?.description || "" %>"/>
  <meta name="robots" content="index,follow"/>
  <link rel="sitemap" type="application/xml" href="/sitemap.xml"/>

  <meta property="og:title" content="<%= meta?.title || "PanStream" %>"/>
  <meta property="og:description" content="<%= meta?.description || "" %>"/>
  <meta property="og:url" content="<%= meta?.url || "" %>"/>
  <meta property="og:site_name" content="PanStream"/>
  <% if (meta?.image) { %><meta property="og:image" content="<%= meta.image %>"/><% } %>
  <meta name="twitter:card" content="summary_large_image"/>

  <!-- Remix Icon -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>

  <!-- Premium Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind (layout only) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- AOS -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet"/>
  <script defer src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

  <!-- Alpine -->
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

  <!-- jQuery -->
  <script defer src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

  <link rel="stylesheet" href="/css/style.css"/>
</head>

<body class="bg-black text-white antialiased selection:bg-white/10 selection:text-white">
  <div class="pan-noise"></div>

  <!-- Page Loader -->
  <div id="panPageLoader" class="pan-pageLoader">
    <div class="pan-pageLoaderInner">
      <div class="pan-spinner"></div>
      <div class="pan-pageLoaderText">
        <div class="pan-brandMark">PanStream</div>
        <div class="pan-subMark">Loading experienceâ€¦</div>
      </div>
    </div>
  </div>

  <%- include("../partials/navbar.ejs") %>

  <main class="min-h-[70vh]">
    <%- body %>
  </main>

  <footer class="border-t border-white/10 mt-20">
    <div class="max-w-7xl mx-auto px-6 py-10 flex items-center justify-between">
      <div class="opacity-80">
        <div class="tracking-[0.35em] text-xs uppercase">PanStream</div>
        <div class="text-sm opacity-70 mt-2">PanStream by 4rc0d3</div>
      </div>
      <div class="text-xs opacity-60">
        Crafted for cinematic streaming.
      </div>
    </div>
  </footer>

  <script src="/js/app.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      AOS.init({ duration: 720, easing: "ease-out-cubic", once: true, offset: 80 });
    });
  </script>

  <%- include("../partials/seo-jsonld.ejs") %>
</body>
</html>
