<section class="mt-12">
  <div class="flex items-end justify-between">
    <h2 class="text-xl md:text-2xl tracking-[0.25em] uppercase opacity-90" data-aos="fade-right"><%= title %></h2>
    <% if (typeof cta !== "undefined" && cta) { %>
      <a href="<%= cta.href %>" class="text-xs tracking-[0.35em] uppercase opacity-60 hover:opacity-90 transition" data-aos="fade-left">
        <%= cta.label %> <i class="ri-arrow-right-line"></i>
      </a>
    <% } %>
  </div>

  <div class="pan-rail mt-6" data-rail>
    <% (items || []).forEach((d, idx) => { %>
      <a href="/detail/<%= d.bookId %>" class="pan-card group" data-aos="zoom-in" data-aos-delay="<%= Math.min(220, idx*35) %>">
        <div class="pan-poster">
          <img loading="lazy" src="/img?u=<%= encodeURIComponent(d.cover || '') %>" alt="<%= d.bookName %>" class="pan-img" />
          <div class="pan-posterOverlay"></div>
        </div>
        <div class="mt-3">
          <div class="text-sm opacity-90 line-clamp-2"><%= d.bookName %></div>
          <div class="text-xs opacity-60 mt-1"><%= d.playCount || "" %></div>
        </div>
      </a>
    <% }) %>
  </div>
</section>
